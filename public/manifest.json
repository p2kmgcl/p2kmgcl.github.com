---
layout: none
---

{
  "name": "{{ site.title }}",
  "short_name": "{{ site.title }}",
  "scope": "{{ site.baseurl }}",
  "start_url": "{{ site.baseurl }}",
  "display": "standalone",
  "background_color": "#fafafa",
  "theme_color": "{{ site.themeColor }}",
  "icons": [
    {% for favicon in site.favicons %}
      {
        "src": "{{ "/favicon/favicon-" | append: favicon | append: ".png" | absolute_url }}",
        "sizes": "{{ favicon }}x{{ favicon }}",
        "type": "image/png"
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
