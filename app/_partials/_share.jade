mixin getUri(link, data, name)
	a(target="_blank" href=link + data + encodeURIComponent(public._data.uri + "/" + current.path.join("/") + ".html"))
		i(class="fa fa-custom-" + name.toLowerCase())
		span= name

ul.shareButtons
	li.googleplus
		+getUri('https://plus.google.com/share?url=', '', 'GooglePlus')
	li.twitter
		+getUri('https://twitter.com/home?status=', title + ' @p2kmgcl ', 'Twitter')
	li.facebook
		+getUri('https://www.facebook.com/sharer/sharer.php?u=', '', 'Facebook')
	li.linkedin
		+getUri('https://www.linkedin.com/shareArticle?mini=true', '&title=' + encodeURIComponent(title) + '&summary=' + encodeURIComponent(description) + '&url=', 'LinkedIn')
